{
    "name": "extension-host",
    "version": "0.1.0",
    "dependencies": [
        {
            "name": "settings"
        },
        {
            "name": "explorer"
        },
        {
            "name": "fs"
        }
    ],
    "contributions": {
        "methods": {
            "load": {
                "handler": "loadExtension",
                "params": {
                    "id": {
                        "type": "string"
                    }
                }
            },
            "unload": {
                "handler": "unloadExtension",
                "params": {
                    "id": {
                        "type": "string"
                    }
                }
            },
            "install": {
                "handler": "installExtension",
                "params": {
                    "path": {
                        "type": "string"
                    }
                },
                "returns": {
                    "id": {
                        "type": "string"
                    }
                }
            },
            "remove": {
                "handler": "removeExtension",
                "params": {
                    "id": {
                        "type": "string"
                    }
                }
            }
        }
    }
}